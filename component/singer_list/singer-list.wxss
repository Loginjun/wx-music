/* component/singer_list/singer-list.wxss */
.singer-list{

}
.sg-flex{
  display: flex;
  padding: 10rpx 20rpx 10rpx 0;
  height: 160rpx;
}
.num{
  flex: 0 0 80rpx;
  width: 80rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #d43c33;
}
.sg-img{
  flex: 0 0 160rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 5px;
  overflow: hidden;
}
.sg-img .auto-img{
  display: inline-block;
  width: 100%;
  height: 100%;
}
.sg-detail{
  flex: 1;
  padding-left: 20rpx;
}
.sg-detail .sg-name{
  font-size: 32rpx;
}
.sg-detail .sg-heat{
  margin: 10rpx 0;
  font-size: 24rpx;
  color: #888;
}
.sg-detail .sg-heat .hot-img{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.sg-detail .sg-heat .sg-score{
  margin-left: 4rpx;
  display: inline-block;
  vertical-align: middle;
}
.sg-detail .sg-person{
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #666;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #eee;
}
.sg-detail .sg-person .name{
  color: purple;
  font-size: 26rpx;
  display: inline-block;
  margin-right: 8rpx;
}
.sg-detail .sg-person .topic-person{
  display: inline-block;
}