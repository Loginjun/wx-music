/* component/mv_list/mv-list-item.wxss */
.video-detail{
  width: 100%;
}
.video{
  width: 100%;
}
video{
  position: fixed;
  top:0;
  z-index: 1000;
}
.auto-video{
  display: block;
  width: 100%;
}
.v-title{
  margin-top: 225px;
  padding: 20rpx;
}
.v-title .v-name{
  font-size: 34rpx;
  font-weight: 700;
}
.v-title .v-pc{
  margin-top: 16rpx;
  margin-bottom:16rpx;
  /* font-size: 24rpx; */
  font: 14px/1.5 Helvetica,sans-serif,STHeiTi;
  color: #999;
}
.v-detail{
  font: 14px/1.5 Helvetica,sans-serif,STHeiTi;
  color: #555;
}
.v-detail .v-time{
}
.v-detail .v-desc{

}
/* 数据 */
.mv-count{
  padding: 10rpx 0 20rpx 0;
  display: flex;
}
.mv-count .con{
  flex: 1;
  text-align: center;
  font-size: 20rpx;
  color: #666;
}
.con .yes{
  font-size: 24rpx;
}
.v-line{
  border-bottom: 1px solid #eee;
}
/* 作者 */
.v-act-det{
  display: flex;
  padding: 20rpx;
}
.v-act-det .v-brief{
  flex: 1;
  font-size: 28rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}
.v-act-det .v-collect{
  flex: 0 0 76rpx;
  width: 76rpx;
  padding: 2rpx 12rpx;
  font-size: 20rpx;
  border-radius: 10px;
  border: 1px solid transparent;
  background-color: red;
  color: #fff;
}
/* 评论 */
.v-comment{
  padding: 20rpx 0 0 20rpx
}
.v-comment .total{
  display: inline-block;
  font-size: 24rpx;
  font-weight: normal;
  color: #666;
}
.com-flex{
  display: flex;
  padding: 10rpx 0;
  position: relative;
}
.com-flex .man-img{
  flex: 0 0 80rpx;
  width: 80rpx;
}
.com-flex .man-img .auto-img{
  border-radius: 50%;
}
.com-flex .man-msg{
  flex: 1;
  margin-left: 10rpx;
  border-bottom: 1px solid #eee;
}
.man-msg .nickname{
  padding: 10rpx 0;
  font-size: 24rpx;
}
.man-msg .likedCount{
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  display: inline-block;
  font-size: 24rpx;
  color: #666;
}
.man-msg .content{
  padding: 20rpx 20rpx 20rpx 0;
  font-size: 28rpx;
}